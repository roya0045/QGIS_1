  "type": "function",
  "groups": ["GeometryGroup"],
  "description": "Returns a multipart geometry if the provided geometry is not a point and is crossed by an edge of the second geometry provided. Otherwise will return the unchanged geometry.",
  "arguments": [{
    "arg": "geometry",
    "description": "The line or polygon geometry to split"
  },
  {
    "arg": "split_by",
    "description": " The geometry used to perform the split, polygons will be converted to closed lines."
  }],
  "examples": [{
    "expression": "geom_to_wkt(split_geometry(geom_from_wkt('LINESTRING(0 0,5 5)'),geom_from_wkt('LINESTRING(5 0,0 5)')))",
    "returns": "'MultiLineString ((0 0, 2.5 2.5),(2.5 2.5, 5 5))'"
  }, {
    "expression": "geom_to_wkt(split_geometry(geom_from_wkt('POLYGON((0 0,5 0,5 5))'),geom_from_wkt('LINESTRING(5 0,0 5)')))",
    "returns": "'MultiPolygon (((0 0, 2.5 2.5, 5 0, 0 0)),((5 0, 2.5 2.5, 5 5, 5 0)))'"
  }, {
    "expression": "geom_to_wkt(split_geometry(geom_from_wkt('POLYGON((0 0,5 0,5 5))'),geom_from_wkt('POINT(1 1)')))",
    "returns": "'Polygon ((0 0, 5 0, 5 5))'"
  }, {
    "expression": "geom_to_wkt(split_geometry(geom_from_wkt('MULTIPOINT((0 0),(5 0),(5 5),(0 0))'),geom_from_wkt('LINESTRING((0 0,5 5))')))",
    "returns": "'MultiPoint ((0 0),(5 0),(5 5),(0 0))'"
  }],
